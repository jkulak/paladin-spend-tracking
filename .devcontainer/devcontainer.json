{
    "name": "jk/paladin",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.isort",
                "ms-python.pylint",
                "ms-python.vscode-pylance",
                "editorconfig.editorconfig",
                "github.copilot",
                "github.copilot-labs"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "runArgs": [
        "--env-file=.env",
        "--network=paladin_network"
    ],
    "forwardPorts": []
}
